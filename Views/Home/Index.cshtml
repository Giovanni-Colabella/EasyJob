@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-center text-2xl font-extrabold">Scorri le migliori offerte lavorative!</h1>
<div class="container mx-auto px-6 py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Widget Catalogo Lavori -->
        <div class="bg-gray-100 p-4 rounded-lg shadow-sm">
            <h2 class="text-xl font-semibold text-gray-800 mb-3">Catalogo Lavori</h2>
            <p class="text-gray-700 mb-4">Visualizza una lista di lavori disponibili in vari settori e per diverse
                qualifiche. Sfoglia le offerte per trovare quella che fa per te.</p>
            <button class="w-full py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition duration-300">
                <a asp-controller="Jobs" asp-action="Index">Visualizza lavori</a>
            </button>
        </div>

        <!-- Widget Aggiungi Offerte Lavorative -->
        <div class="bg-gray-100 p-4 rounded-lg shadow-sm">
